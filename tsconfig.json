{
   "compilerOptions": {
      "jsx": "react",
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "skipLibCheck": true,
      "baseUrl": "./src", // all paths are relative to the baseUrl
      "paths": {
         "~/*": ["*"] // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
      }
   }
}